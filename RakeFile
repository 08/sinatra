require 'rake/testtask'
require 'ftools'

task :default => :test

desc 'Test'
Rake::TestTask.new do |t|
  t.libs << 'test'
  t.pattern = './**/*_test.rb'
  t.verbose = true
end

desc 'Clear all the log files from here down'
task :remove_logs do
  Dir.glob(Dir.pwd + '/**/*.log') do |logfile|
    FileUtils.rm(logfile)
    puts 'Removed: %s' % logfile
  end
end
